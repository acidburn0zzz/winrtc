<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CsWinRTC.Page1">
    <StackLayout VerticalOptions="Center" Margin="5">

        <Label Text="Example of applications using SignalR and WebRTC" 
               FontSize="Large"
           HorizontalOptions="Center"/>
        <Entry Placeholder="Enter group name" x:Name="groupNameInput" />
        <Entry Placeholder="Enter name" x:Name="nameInput" />
        <Button Text="Let's go" Clicked="Button_Clicked" />

    </StackLayout>
</ContentPage>
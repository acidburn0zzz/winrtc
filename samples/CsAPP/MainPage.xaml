<Page
    x:Class="CsAPP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CsAPP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:CsAPP.Views"
    xmlns:vm="using:CsAPP.ViewModels"
    xmlns:models="clr-namespace:CsAPP.ViewModels"
    Title="Color Chat"
    WindowStartupLocation="CenterScreen"
    MinWidth="500"
    Width="650"
    Height="800"
    d:DataContext="{d:DesignInstance models:MainViewModels}"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <views:ChatView Margin="10" DataContext="{Binding ChatViewModel}" />
        </ScrollViewer>
    </Grid>
</Page>
